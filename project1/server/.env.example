# Copy to .env and fill real values. Do NOT commit the real .env.

# Core services
MQTT_BROKER_URL=mqtt://localhost:1883
MONGO_URL=mongodb://localhost:27017

# Databases
MES_DB_NAME=ISA95_MES
ERP_DB_NAME=ISA95_ERP
SF1_DB_NAME=ISA95_SF1
SF2_DB_NAME=ISA95_SF2
SF3_DB_NAME=ISA95_SF3

# Server ports
MES_PORT=5001
ERP_PORT=4001

# Auth & security
JWT_SECRET=change-me
SESSION_SECRET=change-me-too

# OAuth (Google)
FRONTEND_URL=http://localhost:3000
CALLBACK_URL=http://localhost:5001/auth/google/callback
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DB=db1
COSMOS_CONTAINER=container1

# Azure Event Hubs
EVENTHUB_CONNECTION_STRING=your-eventhub-connection-string
EVENTHUB_CONSUMER_GROUP=$Default
